<script type="text/javascript">

$(function(){

	var clearBox = function(){
		$("#charmlist").html("");
		$("#starlist").html("");
	}

	var getData = function(){
		$.ajax({
			url: "/CharmStar",
			dataType: "json",
			type: "GET",
			success: function(res){
                //console.log(res)
				for(var key in res){
					if (key.indexOf("star") > -1) {
						var tmp = "";
						$.each(res[key], function(i, n){

							var itemTmp = '<li>' +
                                        //'<span class="no">' + n.no + '.</span>' +
                                        '<span class="name">' + n.nickname + '</span>' +
                                        '<span class="icon">送礼</span><span class="points">' + n.points +' 个</span>' +
                            		'</li>';
                           	tmp = tmp + itemTmp;
							
						});
						$("#" + key).append(tmp);
					};

					if (key.indexOf("charm") > -1) {
						var tmp = "";
						$.each(res[key], function(i, n){

							var itemTmp = '<li>' +
										//'<span class="no">' + n.no + '.</span>' +
									'<span class="name">' + n.nickname + '</span>' +
									'<span class="icon">收礼</span><span class="points"> ' + n.points +' 个</span>' +
									'</li>';
							tmp = tmp + itemTmp;

						});
						$("#" + key).append(tmp);
					};
				};

			}
		});
	};


	getData();
	setInterval(function(){
		clearBox();
		getData();
	}, 60000);

});

</script>
