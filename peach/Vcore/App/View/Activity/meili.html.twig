{% block content %}
    <!-- 页面内容 -->
    <div class="inx-section">
		<div class="ad-wrapper">
			<div class="ad-main">
				<div class="ad-banner ad-banner-1"></div>
				<div class="ad-banner ad-banner-2">
					<div class="ad-container">
						<div class="ad-charge-show" id="listCE">
							<ol id="charmlist">
								{#<li>#}
								{#<span class="no">1.</span>#}
								{#<span class="name">打开看后打开环境好</span>#}
								{#<span class="icon"></span>#}
								{#<span class="points">111111</span>#}
								{#</li>#}
							</ol>
						</div>
					</div>

					<div class="ad-container">
						<div class="ad-charge-show" id="listHY">
							<ol id="starlist"></ol>
						</div>
					</div>

				</div>
				<div class="ad-banner ad-banner-3"></div>
				<div class="ad-banner ad-banner-4"></div>
			</div>


		</div>
	</div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        app.importFile("pageCommonJs", "js");
    </script>
<script type="text/javascript">

$(function(){

	var clearBox = function(){
		$("#charmlist").html("");
		$("#starlist").html("");
	}

	var getData = function(){
		$.ajax({
			url: "/CharmStar",
			dataType: "json",
			type: "GET",
			success: function(res){
                //console.log(res)
				for(var key in res){
					if (key.indexOf("star") > -1 || key.indexOf("charmlist") > -1) {
						var tmp = "";
						$.each(res[key], function(i, n){

							var itemTmp = '<li>' +
                                        //'<span class="no">' + n.no + '.</span>' +
                                        '<span class="name">' + n.nickname + '</span>' +
                                        '<span class="icon"></span><span class="points">' + n.points +'个</span>' +
                            		'</li>';
                           	tmp = tmp + itemTmp;
							
						});
						$("#" + key).append(tmp);
					};
				};

			}
		});
	};


	getData();
	setInterval(function(){
		clearBox();
		getData();
	}, 60000);

});

</script>
{% endblock %}