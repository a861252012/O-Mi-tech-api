{% extends "layout.html.twig" %}

{% block title %}安全邮箱找回密码{% endblock %}

{% block head %}
    <script type="text/javascript">
        cross.importFile("mailCss", "css");
    </script>
{% endblock %}

{% block content %}
<div class="inx-section">
    <div class="container">
        <div class="mail">
            <div class="mail-head">安全邮箱找回密码</div>
            <form action="" class="m-form" onSubmit="return false">
                <div class="m-form-item clearfix">
                    <div class="mail-icon mail-icon-suc"></div>
                    <div class="mail-content">
                        {{ msg|raw }}
                    </div>
                </div>

                <div class="m-form-item mail-btn-box">
                    <a href="/?handle=login" class="btn btn-orange">返 回 首 页</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
    <script type="text/javascript">
        cross.importFile("mailJs", "js");
    </script>
{% endblock %}