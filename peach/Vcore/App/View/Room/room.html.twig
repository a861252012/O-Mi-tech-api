{% block javascript %}
    <script>
      //安全邮箱状态
      window.SAFE_MAIL_STATE = {
        safemail: "{{ userInfo.safemail }}",
        in_limit_points: "{{ in_limit_points }}",
        in_limit_safemail: "{{ in_limit_safemail }}",
        points: "{{ userInfo.points }}",
        new_user: "{{ new_user }}", //0:老用户，1：新用户
        roled: "{{ userInfo.roled }}"
      };

      window.OpenAPI = {};
      //link: 跳转链接
      window.OpenAPI.link = {{ plat_url|raw }};

    </script>
    <script type="text/javascript">
      $('body').attr('scroll', 'no').attr('id', 'livePage').css('overflow', 'hidden').css('background-color', '#fff');
      $('.inx-wrapper').height('100%');

      //封面，头像，轮播图
      window.IMG_HOST = "{{ IMG_PATH }}";
      window.CDN_HOST = "{{ STATIC_PATH }}";
      window.LOGIN_HOST = "{{ login_domain }}";
      window.FLASH_VERSION = "{{ flash_version }}";
      window.PUBLISH_VERSION = "{{ publish_version }}";

      //var site_domain = document.domain;
      //if (site_domain.indexOf("v.") > -1) {
      //    site_domain = site_domain.substring(2);
      //}
      //window.site_domain = site_domain;
      var _flashVars = {
        "rid": "{{ rid }}"
      };
      _flashVars.httpRes = window.CDN_HOST + "/flash/" + window.FLASH_VERSION + "/";
      _flashVars.httpDomain = "http://" + document.domain + "";
      _flashVars.httpImage = "{{ IMG_PATH }}";
      _flashVars.origin = "{{ origin }}";
      _flashVars.certificate = "{{ certificate }}";
      _flashVars.appname = "第一坊";
      _flashVars.appurl = _flashVars.httpRes + "update/oneRoom.air";
      _flashVars.getRoomKey = "{{ getRoomKey }}";
      _flashVars.OPEN_WEB = "{{ OPEN_WEB }}";
      _flashVars.roomOrigin = "{{ room.origin }}";
      window._flashVars = _flashVars;
      window.ROOMID = parseInt(window._flashVars.rid, 10);

    </script>

    <script type="text/javascript">
      cross.importFile("liveJs", "js");
