                                </li>
                                <li>
                                    <a target="_blank" href="/member/consumerd">
                                        消费记录
                                    </a>
                                </li>
                                <li>
                                    <a target="_blank" href="/member/password">
                                        密码管理
                                    </a>
                                </li>
                                <li>
                                    <a target="_blank" href="/member/myReservation">
                                        一对一约会
                                    </a>
                                </li>
                                <li>
                                    <a href="/logout">
                                        退出
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="menu-button">
                        <a href="/member/msglist" target="_blank" class="link">消息</a>
                        <a href="/charge/order" target="_blank" class="link">充值</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var PAGE_HIGHT_MAPPING = {'index': 0, 'ranking': 1, 'shop': 2, 'join': 3, 'act': 4, 'noble': 5, 'download': 6},
        currentUrl = location.href.split('/');

    if (!!currentUrl[3] && currentUrl[3] != '/') {
        //考虑带?, #的情况
        currentUrl = currentUrl[3].replace(/[?#](.*)/g, '');
    } else {
        currentUrl = 'index';
    }

    if (PAGE_HIGHT_MAPPING[currentUrl] != null) {
        document.getElementById('menu').getElementsByTagName('a')[PAGE_HIGHT_MAPPING[currentUrl]].className += 'active';
    }

</script>