                <input type="text" id="searchIpt" maxlength="12" placeholder="输入主播昵称/主播ID">
                <button id="searchIptBtn">
                    <i class="fa fa-search"></i>
                </button>
            </div>
            <div class="mt-head-right">
                {% if uid == "" %}
                    <button class="button btn-open-login J-login">登录</button> |
                    <button class="button btn-open-registered J-reg">注册</button>
                {% else %}
                    <span class="link points">{{points}}<img src="{{ STATIC_PATH }}/public/src/img/diamond.png?v={{ publish_version }}" style="margin-left: 5px;"></span>
                    <div class="logged-menu">
                        <div class="dash-profile shover">
                            <a class="img-avatar active-user">
                                {% if headimg == "0" or headimg == null %}
                                    <img src="{{ STATIC_PATH }}{{ PIC_PATH }}head_80.png?w=80&h=80"/>
                                {% else %}
                                    <img src="{{ IMG_PATH }}/{{ headimg }}?w=80&h=80"/>
                                {% endif %}

                            </a>
                            <span class="link nickname" title="{{nickname}}">{{nickname}}</span>
                            {% if vip > 0 %}
                                <span class="hotListImg basicLevel{{vip}}"></span>
                            {% endif %}
                            <ul class="profile-nav">
                                <li>
                                    <a target="_blank" href="/member/index">
                                        基本信息
                                    </a>
                                </li>
                                {% if roled == 3 %}
                                    <li>
                                        <a target="_blank" href="/{{ uid }}/h5">
                                            我要直播
                                        </a>
                                    </li>
                                {% endif %}
                                <li>
                                    <a target="_blank" href="/member/attention">
                                        我的关注
                                    </a>
                                </li>
                                <li>
                                    <a target="_blank" href="/member/scene">
                                        我的道具
